# LLM API Configuration
# 复制此文件为 .env.local 并填入你的API配置

# API Provider (openai, anthropic, zhipu, qwen)
NEXT_PUBLIC_LLM_PROVIDER=openai

# API Base URL
NEXT_PUBLIC_LLM_BASE_URL=https://api.openai.com/v1

# API Key
NEXT_PUBLIC_LLM_API_KEY=your_api_key_here

# Model Name
NEXT_PUBLIC_LLM_MODEL=gpt-3.5-turbo

# Temperature (0.0 - 2.0)
NEXT_PUBLIC_LLM_TEMPERATURE=0.7

# Max Tokens
NEXT_PUBLIC_LLM_MAX_TOKENS=4000

# Request Timeout (ms)
NEXT_PUBLIC_LLM_TIMEOUT=30000

